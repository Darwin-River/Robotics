/*
Runs servos when it hears a sound
*/

#include <Servo.h>

Servo rightServo;
Servo leftServo;

const int MIC_PIN = 8;

void setup() {
  pinMode(LED_BUILTIN, OUTPUT);
  Serial.begin(9600);       // use the serial port
  rightServo.attach(2,600,2300);
  leftServo.attach(3,600,2300);
}

void loop() {
  Serial.println(digitalRead(MIC_PIN));
  if (digitalRead(MIC_PIN) == LOW) {
    rightServo.write(50);
    leftServo.write(150);
    delay(1000);
    rightServo.write(98);
    leftServo.write(98);
    delay(500);
  }
}
